@model MusicDatabase.Data.Tables.Lyric
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>
<h4>Lyric</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="SongId" class="control-label"></label>
				<select asp-for="SongId" class="form-control" asp-items="ViewBag.SongId"></select>
			</div>
			<div class="form-group">
				<label asp-for="Lyrics1" class="control-label"></label>
				<textarea rows="5" asp-for="Lyrics1" class="form-control"></textarea>
				<span asp-validation-for="Lyrics1" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Language" class="control-label"></label>
				<input asp-for="Language" class="form-control" />
				<span asp-validation-for="Language" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
